@model PaginatedModel<ContestSubmissionOutputDto>

<link rel="stylesheet" href="~/css/Identity/Login.css" />
<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div style="margin: 15vh 0rem 0rem 0rem">
    <div class="wrapper fadeInDown">
        <div id="formContent" style="max-width: 60rem !important">
            <div style="margin-top:3rem;">
                <img class="card-img-top" src="@Model.Model.FirstOrDefault().PhotoUrl" alt="Card image cap" style="width: 95%; border-radius: 15px;" />
                <p>Author: <i>@Model.Model.FirstOrDefault().AuthorName</i></p>
                <p><q><i>@Model.Model.FirstOrDefault().Description</i></q></p>
            </div>
            <div class="fadeIn first" style="margin-top: 1rem;">
                <h6>Final score: <span style="color: gray"> @Model.Model.FirstOrDefault().Score </span></h6>
            </div>
            <hr />
            <div style="overflow-y:scroll; max-height: 21rem;">
                @foreach (var review in Model.Model)
                {
                    @foreach (var Review in review.Reviews)
                    {
                        <div>
                            <p>Review by: <i>@Review.AuthorName</i></p>
                            <div class="form-group">
                                <label asp-for="@Review.Comment"></label>
                                <div>
                                    <p class="fadeIn second"><q>@Review.Comment</q></p>
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="slidecontainer">
                                    <h7>Score: <span style="color:gray;">@Review.Score</span> </h7>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                }
            </div>
        </div>
    </div>
</div>