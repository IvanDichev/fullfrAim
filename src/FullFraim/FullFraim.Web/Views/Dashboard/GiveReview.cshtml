@model GiveReviewViewModel

<link rel="stylesheet" href="~/css/Identity/Login.css" />

<div style="margin: 15vh 0rem 0rem 0rem">
    <div class="wrapper fadeInDown">
        <div id="formContent" style="max-width: 60rem !important">
            <div style="margin-top:3rem;">
                <p>@Model.Author</p>
                <img class="card-img-top" src="@Model.PhotoUrl" alt="Card image cap" style="width: 75%; height:50%"/>
                <p>@Model.Description</p>
            </div>
            <form id="account" method="post" enctype="multipart/form-data">
                <div class="fadeIn first" style="margin-top: 1rem;">
                    <h5 style="display: inline-block">Give Review</h5>
                </div>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Review.Comment"></label>
                    <input asp-for="Review.Comment" class="form-control fadeIn second" placeholder="Name" />
                    <span asp-validation-for="Review.Comment" class="text-danger"></span>
                </div>
                
                <div class="form-group fadeIn second">
                    <label asp-for="Review.Score"></label>
                    <textarea asp-for="Review.Score" class="form-control fadeIn third" placeholder="Description">
                    </textarea>
                    <span asp-validation-for="Review.Score" class="text-danger"></span>
                </div>
                @*<div class="form-group fadeIn second">
                    <label asp-for="ContestCategoryId"></label>
                    <select asp-for="ContestCategoryId" asp-items="categories" class="form-control">
                    </select>
                    <span asp-validation-for="@Model.ContestCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group fadeIn second">
                    <label asp-for="ContestTypeId"></label>
                    <select asp-for="ContestTypeId" asp-items="types" class="form-control">
                    </select>
                    <span asp-validation-for="@Model.ContestTypeId" class="text-danger"></span>
                </div>
                <div class="form-group fadeIn second" id="invitation-jury">
                    <label asp-for="Jury"></label>
                    <select asp-for="Jury" asp-items="jury" class="form-control" multiple>
                    </select>
                    <span asp-validation-for="@Model.Jury" class="text-danger"></span>
                </div>
                <div class="form-group fadeIn second" id="invitation-participant">
                    <label asp-for="Participants"></label>
                    <select asp-for="Participants" asp-items="participants" class="form-control" multiple>
                    </select>
                    <span asp-validation-for="@Model.Participants" class="text-danger"></span>
                </div>
                <div class="form-group fadeIn second">
                    <label asp-for="Phases.EndDate_PhaseI"></label>
                    <input asp-for="Phases.EndDate_PhaseI" class="form-control">
                    <span asp-validation-for="@Model.Phases.EndDate_PhaseI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5>Phase Two Duration</h5>
                    <p>Drag the slider to display the current value.</p>
                    <div class="slidecontainer">
                        <input asp-for="Phases.PhaseII_Duration" type="range" min="1" max="24" value="1" class="slider" style="width: 100%" id="myRange">
                        <p>Hours: <span id="demo"></span></p>
                    </div>
                </div>*@
                <div class="form-group formFooter">
                    <div class="form-group">
                        <button type="submit" asp-controller="Dashboard" asp-action="GiveReview" formmethod="post" class="btn btn-primary fadeIn fourth">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>









