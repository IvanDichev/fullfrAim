            <p class="btn btn-info btn-lg btn-block">
                <a class="btn-info" id="submissionButton"
                   asp-controller="SubmissionForm"
                   asp-action="SubmitAContest"
                   asp-route-contestId="@Model.Id">
                    SUBMIT
                </a>
            </p>
